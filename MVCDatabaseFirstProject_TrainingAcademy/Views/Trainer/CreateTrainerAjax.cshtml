@model IEnumerable<MVCDatabaseFirstProject_TrainingAcademy.Models.Trainer>
@{
    ViewBag.Title = "CreateTrainerAjax";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*<script src="~/Scripts/jquery-3.3.1.min.js"></script>*@
<script src="~/Scripts/jquery-3.6.0.min.js"></script>
<script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>

<div class="container-fluid">
    <div class="col-md-5 mx-auto my-5">
        <div id="divAjax1">
            @using (Ajax.BeginForm("TrainerAjaxFormExample", "Trainer", new AjaxOptions
            {
                UpdateTargetId = "divAjax",
                HttpMethod = "POST",
                Confirm = "Are you sure to Save this Data?",
                LoadingElementId = "LoadingImage",
                LoadingElementDuration = 3000,
                OnComplete = "Clear",
            }))
            {
                @Html.AntiForgeryToken()

                <h2 class="text-center">Create Trainer</h2>
                @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                <div class="form-group mb-3">
                    @Html.Label("Trainer Name", new { @class = "form-label" })
                    @Html.TextBox("TrainerName", null, new { @class = "form-control" })
                </div>
                <div class="form-group mb-3">
                    @Html.Label("Phone Number", new { @class = "form-label" })
                    @Html.TextBox("PhoneNumber", null, new { @class = "form-control" })
                </div>
                <div class="form-group mb-3">
                    <input type="submit" value="Save" class="btn btn-lg btn-info" />
                </div>
                <div class="col-md-12" id="LoadingImage" style="display:none;">
                    <img src="~/App_Images/redballLoading.gif" width="200" height="100" />
                </div>

            }
        </div>
        <div id="divAjax">
            @{Html.RenderPartial("_TrainerListView", Model);}
        </div>
    </div>
</div>